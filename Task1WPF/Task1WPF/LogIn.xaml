<Window x:Class="Task1WPF.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task1WPF"
        mc:Ignorable="d"
        Title="LogIn" Height="450" Width="800">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="134,144,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="134,229,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Label Content="User Log In" HorizontalAlignment="Center" Margin="0,40,0,0" VerticalAlignment="Top" FontSize="25"/>
        <TextBox HorizontalAlignment="Left" Margin="293,150,0,0" Name="txtUsername" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="15"/>
        <TextBox HorizontalAlignment="Left" Margin="293,235,0,0" Name="txtPassword" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="15"/>
        <Button Content="Login" Name="btnLogin" HorizontalAlignment="Left" Margin="293,335,0,0" VerticalAlignment="Top" FontSize="15" Width="72" Click="btnLogin_Click"/>

    </Grid>
</Window>
